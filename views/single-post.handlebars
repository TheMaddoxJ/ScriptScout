<div class="d-flex justify-content-center mt-3">
    <div class="card col-9">
        <div class="card-header">
            <h2>{{post.title}}</h2>
        </div>
            <div class="d-flex justify-content-between">
                <h3 class="mx-2">Location: {{post.location}}</h3>
                <h4 class="mx-2"> Salary: ${{post.salary}}</h4>
                <a href="{{post.applyLink}}" alt="link to apply for this job">Apply Here</a>
                <a href="/save" class="mx-2"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-heart-fill" viewBox="0 0 16 16">
    <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
    </svg></a>
            </div>
        <div class="card-body">
            <h4>Job Summary:</h4> 
            <p>{{post.summary}}</p>
            <h4>Job Requirements</h4>
            <p>{{post.reqs}}</p>
        </div>
        <div class="card-footer">
            <h5>Questions about this job? Ask: {{user.name}}</h5>
        </div>
    </div>         
</div>
 
