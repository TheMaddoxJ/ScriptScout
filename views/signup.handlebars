<div class="card">
    <h2 class="card-header">Enter name, email, and password to sign up</h2>
    <form id="signup-form" class="card-body">
        <div class="mb-6">
            <label for="name" class="form-label">name</label>
            <input placeholder="Enter name" type="name" class="form-control" id="name-signup">
        </div>

        <div class="mb-6">
            <label for="email" class="form-label">Email</label>
            <input placeholder="Enter email" type="email" class="form-control" id="email-signup">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-6">
            <label for="password" class="form-label">Password</label>
            <input placeholder="Enter password" type="password" class="form-control" id="password-signup">
            <div id="passwordHelp" class="form-text">Must be 6 digits long.</div>
        </div>

        <div class="mb-6">
            <a href="/login">Already have an account? Login here</a>
        </div>

        <button type="submit" class="btn btn-primary" id="signup-btn">Sign Up</button>
    </form>
</div>
<script src="js/signup.js"></script>